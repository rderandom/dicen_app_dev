<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/c1"
                android:endColor="@color/c2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/cB1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="2dp"
                android:right="20dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/cD1"
                android:startColor="@color/cD2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/cB1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="2dp"
                android:right="20dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/cC1"
                android:startColor="@color/cC2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/cB1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="2dp"
                android:right="20dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>