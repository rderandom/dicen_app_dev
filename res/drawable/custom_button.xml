<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/blue3"
                android:endColor="@color/blue3"
                android:angle="270" />
            <!--  <stroke
                android:width="1dp"
                android:color="@color/cB1" /> -->
            <corners
                android:radius="1dp" />
            <padding
                android:left="20dp"
                android:top="2dp"
                android:right="20dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/blue2"
                android:startColor="@color/blue2"
                android:angle="270" />
          <!--    <stroke
                android:width="1dp"
                android:color="@color/cB1" /> -->
            <corners
                android:radius="1dp" />
            <padding
                android:left="20dp"
                android:top="2dp"
                android:right="20dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/blue1"
                android:startColor="@color/blue1"
                android:angle="270" />
        <!--     <stroke
                android:width="1dp"
                android:color="@color/cB1" /> -->
            <corners
                android:radius="1dp" />
            <padding
                android:left="20dp"
                android:top="2dp"
                android:right="20dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>